{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2020",
    "lib": [
      "ES2023"
    ],
    "moduleResolution": "Bundler",
    // "checkJs": true,
    // "allowJs": true,
    "paths": {
      "gnim": [
        "/usr/share/ags/js/node_modules/gnim"
      ],
      "gnim/*": [
        "/usr/share/ags/js/node_modules/gnim/*"
      ],
      "ags": [
        "/usr/share/ags/js/lib"
      ],
      "ags/*": [
        "/usr/share/ags/js/lib/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "ags/gtk4"
  }
}